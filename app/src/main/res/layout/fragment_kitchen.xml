<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".KitchenFragment">

    <TextView
        android:id="@+id/tvKitchen"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kitchen"
        android:textStyle="bold"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvKitchenBulbLifeSpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Life Span: 0 hours"
        android:textSize="25sp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toTopOf="@+id/ivKitchenBulb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvKitchen"/>

    <ImageView
        android:id="@+id/ivKitchenBulb"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:src="@drawable/bulb_off"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvKitchen"/>

    <ImageView
        android:id="@+id/ivKitchenSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_settings"
        app:layout_constraintStart_toEndOf="@+id/tvKitchen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvInstructionKitchen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap to manually turn on/off"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivKitchenBulb"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnManualKitchen"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_shape_round"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:text="Manual"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvInstructionKitchen"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAutomaticKitchen"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_shape_round"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:text="Automatic"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvInstructionKitchen"/>



</androidx.constraintlayout.widget.ConstraintLayout>